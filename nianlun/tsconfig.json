{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "jsxFactory": "Taro.createElement",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@@": ["./src"],
      "@app": ["./src/components"],
      "@actions": ["./src/store/actions"],
      "@images": ["./src/assets"],
      "@utils": ["./src/utils"],
      "@themes": ["./src/themes"],
      "@styles": ["./src/styles"],
    }
  },
  "compileOnSave": false,
}
